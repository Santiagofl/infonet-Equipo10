<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    console.log("Hola mundo");

    $(document).ready(function () {
        $("#clearImgProducto").hide();
        $('#imagenProducto').change(function () {
            $("#prevProd").html('');
            for (var i = 0; i < $(this)[0].files.length; i++) {
                $("#prevProd").append('<img src="' + window.URL.createObjectURL(this.files[i]) + '" width="150" />');
            }
            $("#clearImgProducto").show();
        });

        $("#clearImgProducto").click(function () {
            $("#prevProd").html('');
            $("#imagenProducto").val('');
            $("#clearImgProducto").hide();
        });
    });
</script>
{{> header}}
<main class="d-flex">
    {{> menuAbm}}
    <div class="container my-3">
        <h5>Crear Productos</h5>
        <div class="my-3">
            <form method="post" action="/infonet/producto/subirProducto" enctype="multipart/form-data">
                <div class="form-floating my-3">
                    <input type="text" name="nombreProducto" class="form-control" id="nombreProducto"
                           placeholder="name@example.com">
                    <label for="nombreProducto">Nombre</label>
                </div>
                <div class="form-floating my-3">
                    <p class="mb-0">Seleccionar imagen</p>
                    <input type="file" name="imagenProducto" class="form-control" id="imagenProducto"
                           accept="image/png, image/jpeg"
                           style="padding: 0 12px !important; line-height: 3.25 !important;">
                </div>
                <!---En este div y el button son para eliminar y previsualizar-->
                <div id="prevProd" class="form-floating my-3">
                </div>
                <button type="button" class="btn-close" id="clearImgProducto"></button>
                <div class="form-floating my-3">
                    <select class="form-select" name="tipoProducto" id="tipoProducto"
                            aria-label="Floating label select example">
                        <option selected disabled>Tipo</option>
                        <option value="1">Diario</option>
                        <option value="2">Revista</option>
                    </select>
                    <label for="tipoProducto">Seleccionar tipo</label>
                </div>
                <button type="submit" class="btn btn-primary my-2 btn-radius">Crear</button>
            </form>
        </div>
    </div>
</main>
{{> footer}}