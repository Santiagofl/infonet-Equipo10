<h3>Suscripciones diarias por Rango de Fechas</h3>
<nav class="topnav">
    <form id="formDate" action="/infonet/graficos" method="get">
        <label for="filtroFechaD">Desde:</label>
        <input type="date" id="filtroFechaD" name="desde" value={{fechaDesde}}>
        <label for="hasta">Hasta:</label>
        <input type="date" id="hasta" name="hasta" value={{fechaHasta}}>
        <button type="submit" form="formDate">Buscar</button>
    </form>
</nav>

<div>
    <canvas id="myChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [{{#dates}}'{{fecha}}',{{/dates}}],
    datasets: [{
        label: 'Cantidad de suscripciones',
        data: [{{#cantidades}}{{cantidad}},{{/cantidades}}],
        borderWidth: 1
    }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
    });
</script>

