    <div class="d-flex flex-wrap gap-4 justify-content-center">
        {{#articulos}}
            <div class="card" style="width: 18rem;">
                <img src="https://i.ytimg.com/vi/KAPSu-JOViU/hqdefault.jpg" class="card-img-top" alt="...">
